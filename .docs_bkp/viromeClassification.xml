<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>viromeClassificatonXML</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <!--Processing-->
        <command>
            <type>RunUnixCommand</type>
            <name>Create VIROME Classification XML</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/viromeClassification</executable>
            <param>
                <key>--server</key>
                <value>$;SERVER_NAME$;</value>
            </param>
            <param>
                <key>--library</key>
                <value>$;LIBRARY_ID$;</value>
            </param>
            <param>
                <key>--env</key>
                <value>$;LOCATION$;</value>
            </param>
            <param>
                <key>--libList</key>
                <value>$;LIBRARY_FILE_LIST$;</value>
            </param>
            <param>
                <key>--libFile</key>
                <value>$;LIBRARY_FILE$;</value>
            </param>
            <param>
                <key>--outdir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>stdout</key>
                <value>$;TMP_DIR$;/viromeTaxonomyXML.stdout</value>
	    </param>
	    <param>
		<key>stderr</key>    
		<value>$;TMP_DIR$;/viromeTaxonomyXML.stderr</value>
	    </param>
        </command>
    </commandSet>
</commandSetRoot>